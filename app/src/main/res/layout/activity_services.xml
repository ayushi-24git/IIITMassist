<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.complaintapp.ServicesActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical"
        android:background="#DCDCDC">
    <TextView


        style="@style/HeadingStyle"
        android:textAlignment="center"
        android:text="How can we help you?"

    />

    <FrameLayout

        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="15dp"
        android:translationZ="15dp"
        android:stateListAnimator="@null"
        android:background="@drawable/layout_bg">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="60dp"
                app:srcCompat="@drawable/plumber"/>
        <TextView
            android:id="@+id/plumber"
            style="@style/CategoryStyle"
            android:textAlignment="center"
            android:text="Plumber"

            android:layout_height="match_parent"
            android:fontFamily="@font/arcade"
            android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout

        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="15dp"
        android:translationZ="15dp"
        android:stateListAnimator="@null"
        android:background="@drawable/layout_bg">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="60dp"
            app:srcCompat="@drawable/elec"/>
        <TextView
            android:id="@+id/electrician"
            style="@style/CategoryStyle"
            android:textAlignment="center"
            android:text="Electrician"
            android:layout_height="match_parent"
            android:fontFamily="@font/arcade"
            android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout

        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="15dp"
        android:translationZ="15dp"
        android:stateListAnimator="@null"
        android:background="@drawable/layout_bg">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="60dp"
            app:srcCompat="@drawable/carp"/>
        <TextView
            android:id="@+id/carpenter"
            style="@style/CategoryStyle"
            android:textAlignment="center"
            android:text="Carpenter"
            android:layout_height="match_parent"
            android:fontFamily="@font/arcade"
            android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout

        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="15dp"
        android:translationZ="15dp"
        android:stateListAnimator="@null"
        android:background="@drawable/layout_bg">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="60dp"
            app:srcCompat="@drawable/painter"/>
        <TextView
            android:id="@+id/painter"
            style="@style/CategoryStyle"
            android:textAlignment="center"
            android:text="Painter"
            android:layout_height="match_parent"
            android:fontFamily="@font/arcade"
            android:textSize="20sp"/>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout

        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="15dp"
        android:translationZ="15dp"
        android:stateListAnimator="@null"
        android:background="@drawable/layout_bg">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="60dp"
            app:srcCompat="@drawable/ambu"/>
        <TextView
            android:id="@+id/ambulance"
            style="@style/CategoryStyle"
            android:textAlignment="center"
            android:text="Ambulance"
            android:layout_height="match_parent"
            android:fontFamily="@font/arcade"
            android:textSize="20sp"/>
        </LinearLayout>
    </FrameLayout>
    </LinearLayout>
</ScrollView>